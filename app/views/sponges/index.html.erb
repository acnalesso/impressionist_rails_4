<h1>Listing sponges</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @sponges.each do |sponge| %>
      <tr>
        <td><%= link_to 'Show', sponge %></td>
        <td><%= link_to 'Edit', edit_sponge_path(sponge) %></td>
        <td><%= link_to 'Destroy', sponge, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

